<!-- Layout for the Soccer score counter. -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:src="@drawable/lightedfield"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:padding="@dimen/team_name_padding"
                android:text="@string/team_a"
                android:textColor="#0165fc"
                android:textSize="@dimen/team_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/top_pad_numeric"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:padding="@dimen/top_pad_numeric"
                        android:text="@string/score_str"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sub_data_text_size" />

                    <TextView
                        android:id="@+id/team_a_score"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:paddingBottom="@dimen/top_pad_numeric"
                        android:text="@string/zero_score_zero_reds"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/value_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:padding="@dimen/top_pad_numeric"
                        android:text="@string/red_cards"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sub_data_text_size" />

                    <TextView
                        android:id="@+id/team_a_reds"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:paddingBottom="@dimen/top_pad_numeric"
                        android:text="@string/zero_score_zero_reds"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/value_text_size" />
                </LinearLayout>

            </LinearLayout>


            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="80sp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:scaleType="fitCenter"
                android:onClick="addRedForTeamA"

                app:srcCompat="@drawable/redcardreferee" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="addOneForTeamA"
                android:text="@string/goal_string" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:padding="@dimen/team_name_padding"
                android:text="@string/team_b"
                android:textColor="#e50000"
                android:textSize="@dimen/team_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/top_pad_numeric">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:padding="@dimen/top_pad_numeric"
                        android:text="@string/score_str"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sub_data_text_size" />

                    <TextView
                        android:id="@+id/team_b_score"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:paddingBottom="@dimen/top_pad_numeric"
                        android:text="@string/zero_score_zero_reds"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/value_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:padding="@dimen/top_pad_numeric"
                        android:text="@string/red_cards"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sub_data_text_size" />

                    <TextView
                        android:id="@+id/team_b_reds"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:paddingBottom="@dimen/top_pad_numeric"
                        android:text="@string/zero_score_zero_reds"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/value_text_size" />
                </LinearLayout>



            </LinearLayout>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="80sp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:scaleType="fitCenter"
                android:onClick="addRedForTeamB"

                app:srcCompat="@drawable/redcardreferee" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:onClick="addOneForTeamB"
                android:text="@string/goal_string" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="@dimen/top_pad_numeric"
        android:onClick="resetScore"
        android:text="@string/reset_str"
        android:textSize="@dimen/team_text_size"/>

</RelativeLayout>